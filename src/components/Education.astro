---
import {
  siteConfig,
  supportedLanguages,
  defaultLanguage,
} from "../config";
const hasEducation = siteConfig.education && siteConfig.education.length > 0;
---

{
  hasEducation && (
    <section id="education" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
              {supportedLanguages.map((lang) => (
                <span
                  class={`lang lang-${lang}`}
                  data-education-lang={lang}
                  hidden={lang !== defaultLanguage}
                  key={lang}
                >
                  {lang === "en" ? "Education" : "Ausbildung"}
                </span>
              ))}
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="space-y-8">
              {siteConfig.education.map((edu, index) => (
                <div
                  class="bg-white rounded-lg shadow-sm border border-gray-100 p-4 sm:p-5 md:p-6 hover:shadow-md transition-shadow duration-300"
                  key={edu.degree?.en ?? edu.degree?.de ?? index}
                >
                  <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-4">
                    <div>
                      <h3 class="text-lg sm:text-xl font-semibold text-gray-900">
                        {supportedLanguages.map((lang) => (
                          <span
                            class={`lang lang-${lang}`}
                            data-education-lang={lang}
                            hidden={lang !== defaultLanguage}
                            key={lang}
                          >
                            {edu.degree?.[lang] ?? ""}
                          </span>
                        ))}
                      </h3>
                      {typeof edu.link === "string" && edu.link.length > 0 ? (
                        <a
                          href={edu.link}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="text-base sm:text-lg underline decoration-transparent transition-colors duration-200 hover:decoration-inherit"
                          style={`color: ${siteConfig.accentColor}`}
                        >
                          {supportedLanguages.map((lang) => (
                            <span
                              class={`lang lang-${lang}`}
                              data-education-lang={lang}
                              hidden={lang !== defaultLanguage}
                              key={lang}
                            >
                              {edu.school?.[lang] ?? ""}
                            </span>
                          ))}
                        </a>
                      ) : (
                        <p
                          class="text-base sm:text-lg"
                          style={`color: ${siteConfig.accentColor}`}
                        >
                          {supportedLanguages.map((lang) => (
                            <span
                              class={`lang lang-${lang}`}
                              data-education-lang={lang}
                              hidden={lang !== defaultLanguage}
                              key={lang}
                            >
                              {edu.school?.[lang] ?? ""}
                            </span>
                          ))}
                        </p>
                      )}
                    </div>
                    <span class="text-xs sm:text-sm text-gray-500 mt-2 sm:mt-0">
                      {supportedLanguages.map((lang) => (
                        <span
                          class={`lang lang-${lang}`}
                          data-education-lang={lang}
                          hidden={lang !== defaultLanguage}
                          key={lang}
                        >
                          {edu.dateRange?.[lang] ?? ""}
                        </span>
                      ))}
                    </span>
                  </div>

                  {supportedLanguages.map((lang) => (
                    <ul
                      class={`space-y-2 lang lang-${lang}`}
                      data-education-lang={lang}
                      hidden={lang !== defaultLanguage}
                      key={lang}
                    >
                      {(edu.achievements?.[lang] ?? []).map((achievement, achievementIndex) => (
                        <li class="flex items-start" key={`${lang}-${achievementIndex}`}>
                          <span class="inline-block w-1.5 h-1.5 rounded-full bg-gray-400 mt-2 mr-3 flex-shrink-0" />
                          <span class="text-sm sm:text-base text-gray-600">
                            {achievement}
                          </span>
                        </li>
                      ))}
                    </ul>
                  ))}
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
